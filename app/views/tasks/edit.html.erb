<h1>id:<%= @task.id %>のタスクページ</h1>

<%= form_with(model: @task, local: true) do |f| %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '送信' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>